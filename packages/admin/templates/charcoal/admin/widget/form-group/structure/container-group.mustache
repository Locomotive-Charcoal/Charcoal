    {{# showTitle }}
        <h3>{{ title }}</h3>
    {{/ showTitle }}
    {{> charcoal/admin/template/inc.description }}
</header>
{{/ showHeader }}
<div class="o-container c-form-widget_group_content">
    <fieldset>
        {{^ showHeader }}
            {{# showDescription }}
                <div class="form-text border-bottom mb-4 pb-4">{{& description }}</div>
            {{/ showDescription }}
        {{/ showHeader }}
        {{# showNotesAbove }}
        <div class="form-text mb-4">
            {{> charcoal/admin/template/inc.notes }}
        </div>
        {{/ showNotesAbove }}

        <div class="c-structure-property_entries">
            {{> charcoal/admin/widget/form-group/structure/entries }}
        </div>
        {{^ showNotesAbove }}
            {{> charcoal/admin/template/inc.notes }}
        {{/ showNotesAbove }}
    </fieldset>
</div>