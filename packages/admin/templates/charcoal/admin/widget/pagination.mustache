{{!--
Pagination Widget
=================

`charcoal/admin/widget/pagination`
--}}

<nav id="{{ widgetId }}">
    <ul class="pagination"{{# showLabel }} aria-label="{{ label }}"{{/ showLabel }}>
        <li data-page-num="{{pagePrev}}" class="page-item js-page-switch{{^previousEnabled}} disabled{{/previousEnabled}}">
            <a href="#" class="page-link">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">{{# _t }}Previous Page{{/ _t }}</span>
            </a>
        </li>
        {{# pages }}
            {{#separator}}
                <li class="page-item">
                    <span class="page-link">...</span>
                </li>
            {{/separator}}
            {{^separator}}
                <li data-page-num="{{ num }}" class="page-item js-page-switch{{# active }} active{{/ active }}">
                    <a href="#" class="page-link">{{ num }}</a>
                </li>
            {{/separator}}
        {{/ pages }}
        <li data-page-num="{{ pageNext }}" class="page-item js-page-switch{{^ nextEnabled }} disabled{{/ nextEnabled }}">
            <a href="#" class="page-link" aria-label="{{# _t }}Next Page{{/ _t }}">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">{{# _t }}Next Page{{/ _t }}</span>
            </a>
        </li>
    </ul>
    {{#quickJumpEnabled}}
        <form class="form-inline float-right mb-3 js-jump-page-form">
            <div class="form-group">
                <label for="pager_jump" class="sr-only">Page</label>
                <input type="text" class="form-control form-control-sm mr-2" name="page" size="3" id="pager_jump" value="1">
            </div>
            <button type="submit" class="btn btn-primary">{{# _t }}Jump{{/ _t }}</button>
        </form>
    {{/quickJumpEnabled}}

</nav>
