{{!--
    Tabulator Property Input
    ========================

    `charcoal/admin/property/input/tabulator`
--}}

<div id="{{inputId}}-tabulator" class="table-bordered"></div>

<div class="{{inputId}}-tabulator-footer || mt-3">
    <div class="row">
        <div class="col-md-9">
            <div id="{{inputId}}-tabulator-feedback" class="alert || d-inline p-1 pl-2 pr-2">

            </div>
        </div>
        <div class="col-md-3 text-right">
            <div class="btn-group" role="group">
                <button type='button' class='btn btn-primary js-{{inputId}}-add'>
                    {{# addLabel }}
                        {{.}}
                    {{/ addLabel }}
                    {{^ addLabel }}
                        +
                    {{/ addLabel }}
                </button>
            </div>
        </div>
    </div>
</div>
<input
    type="hidden"
    id="{{ inputId }}"
    name="{{ inputName }}"
    value="{{ inputVal }}"
>

{{# addJs }}
<script>
    Charcoal.Admin.manager().add_property_input({
        id: '{{ inputId }}',
        type: 'charcoal/admin/property/input/tabulator',
        data: {{& controlDataForJsAsJson }}
    });
</script>
{{/ addJs }}
