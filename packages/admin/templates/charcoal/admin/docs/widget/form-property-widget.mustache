{{!--

    Docs \ Form Property Widget
    ===========================

    @used-by `charcoal/admin/docs/widget/form-group-widget`

--}}
<article class="card">
    <div class="card-header">
        <h3 class="card-title m-0">
            {{# collapsible }}
                <a
                    role="button"
                    data-toggle="collapse"
                    {{# parented }}
                    data-parent="#{{ formGroup.widgetId }}_accordion"
                    {{/ parented }}
                    href="#panel_{{ widgetId }}"
                    aria-expanded="false"
                    aria-controls="panel_{{ widgetId }}"
                    class="text-dark">
            {{/ collapsible }}
            {{> charcoal/admin/property/control/label }} ({{prop.type}})
            {{# collapsible }}
                </a>
            {{/ collapsible }}
        </h3>
    </div>
    <div
        class="{{# collapsible }}collapse{{/ collapsible }}{{# collapsed }} show{{/ collapsed }}"
        id="panel_{{ widgetId }}"
        role="tabpanel">
        <div class="card-body">
            {{# typeDescription }}
                <p><strong>{{ prop.type }}</strong> - {{& . }}</p>
            {{/ typeDescription }}

            {{# description }}
                <h4>Description</h4>
                <p>{{& . }}</p>
            {{/ description }}

            {{# notes }}
                <h4>Note</h4>
                <p>{{& . }}</p>
            {{/ notes }}

            {{# hasExtraData }}
                <div role="tablist" aria-multiselectable="true">
                    <div class="card card-collapsible">
                        <div class="card-header">
                            <h4 class="card-title m-0">
                                <a
                                    role="button"
                                    data-toggle="collapse"
                                    href="#more_{{ widgetId }}"
                                    aria-expanded="false"
                                    aria-controls="more_{{ widgetId }}"
                                    class="text-dark">
                                    {{# _t }}See more{{/ _t }}
                                </a>
                            </h4>
                        </div>
                        <div class="collapse" id="more_{{ widgetId }}" role="tabpanel">
                            <div class="card-body">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                {{# _t }}Feature{{/ _t }}
                                            </th>
                                            <th>
                                                {{# _t }}Description{{/ _t }}
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{# extraData }}
                                            <tr>
                                                <td>
                                                    {{ feature }}
                                                </td>
                                                <td>
                                                    {{& description }}
                                                </td>
                                            </tr>
                                        {{/ extraData }}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            {{/ hasExtraData }}
        </div>
    </div>
</article>

