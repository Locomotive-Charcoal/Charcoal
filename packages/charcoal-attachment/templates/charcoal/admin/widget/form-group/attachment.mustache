{{!--
Attachment Widget, as Form Group
================================

`charcoal/admin/widget/form-group/attachment`

--}}

{{# showHeader }}
    <header class="o-header -small">
        {{# showTitle }}
            <h3>{{ title }}</h3>
        {{/ showTitle }}
        {{> charcoal/admin/template/inc.description }}
        {{# showNotesAbove }}
            {{> charcoal/admin/template/inc.notes }}
        {{/ showNotesAbove }}
    </header>
{{/ showHeader }}
<div class="o-container c-form-widget_group_content">
    <fieldset>
        {{> charcoal/admin/template/inc.notes }}

        {{# widget }}
            {{> $widget_template }}
        {{/ widget }}

    </fieldset>
</div>
