{
    "type": "library",
    "name": "charcoal/charcoal",
    "description": "The Charcoal Framework monorepo",
    "keywords": ["framework", "charcoal", "cms"],
    "homepage": "https://charcoal.locomotive.ca",
    "license": "MIT",
    "authors": [
        {
            "name": "Locomotive",
            "homepage": "https://locomotive.ca"
        },
        {
            "name": "Mathieu Ducharme",
            "email": "mat@locomotive.ca"
        },
        {
            "name": "Chauncey McAskill",
            "email": "chauncey@locomotive.ca"
        },
        {
            "name": "Joel Alphonso",
            "email": "joel@locomotive.ca"
        },
        {
            "name": "Dominic Lord",
            "email": "dom@locomotive.ca"
        },
        {
            "name": "Benjamin Roch",
            "email": "ben@locomotive.ca"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-simplexml": "*",
        "ext-spl": "*",
        "barryvdh/elfinder-flysystem-driver": "^0.3",
        "erusev/parsedown": "^1.7",
        "guzzlehttp/guzzle": "^6.0 || ^7.0",
        "kriswallsmith/assetic": "^1.4",
        "laminas/laminas-permissions-acl": "^2.8",
        "league/climate": "^3.2",
        "league/flysystem": "^1.0",
        "mcaskill/php-html-build-attributes": "^1.0",
        "monolog/monolog": "^1.17",
        "phpmailer/phpmailer": "~6.0",
        "pimple/pimple": "^3.0",
        "psr/cache": "^1.0",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0",
        "seld/jsonlint": "^1.9",
        "slim/slim": "^3.7",
        "studio-42/elfinder": "2.1.61",
        "symfony/translation": "^3.4",
        "tedivm/stash": "~0.16",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "cache/void-adapter": "^1.0",
        "league/csv": "^9.5",
        "league/flysystem-aws-s3-v3": "^1.0",
        "league/flysystem-memory": "^1.0",
        "league/flysystem-sftp": "^1.0",
        "mockery/mockery": "^1.0",
        "mustache/mustache": "^2.11",
        "php-coveralls/php-coveralls": "^2.2",
        "phpstan/phpstan": "^1.6",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/yaml": "^3.0",
        "symplify/monorepo-builder": "^10.2",
        "twig/twig": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Charcoal\\": [
                "packages/app/src/Charcoal/",
                "packages/attachment/src/Charcoal",
                "packages/cache/src/Charcoal/",
                "packages/cms/src/Charcoal",
                "packages/config/src/Charcoal/",
                "packages/core/src/Charcoal",
                "packages/factory/src/Charcoal/",
                "packages/image/src/Charcoal",
                "packages/property/src/Charcoal/",
                "packages/queue/src/Charcoal",
                "packages/translator/src/Charcoal/",
                "packages/ui/src/Charcoal/"
            ],
            "Charcoal\\Admin\\": "packages/admin/src/Charcoal/Admin/",
            "Charcoal\\Email\\": "packages/email/src/Charcoal/Email",
            "Charcoal\\Object\\": "packages/object/src/Charcoal/Object",
            "Charcoal\\User\\": "packages/user/src/Charcoal/User",
            "Charcoal\\View\\": "packages/view/src/Charcoal/View"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Charcoal\\MonorepoBuilder\\": [
                "build/Charcoal/MonorepoBuilder/"
            ],
            "Charcoal\\Tests\\": [
                "packages/admin/tests/Charcoal/",
                "packages/app/tests/Charcoal",
                "packages/attachment/tests/Charcoal",
                "packages/cache/tests/Charcoal/",
                "packages/cms/tests/Charcoal",
                "packages/config/tests/Charcoal/",
                "packages/core/tests/Charcoal",
                "packages/email/tests/Charcoal",
                "packages/factory/tests/Charcoal/",
                "packages/image/tests/Charcoal",
                "packages/object/tests/Charcoal/",
                "packages/property/tests/Charcoal",
                "packages/queue/tests/Charcoal/",
                "packages/translator/tests/Charcoal",
                "packages/ui/tests/Charcoal",
                "packages/user/tests/Charcoal/",
                "packages/view/tests/Charcoal"
            ]
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "4.x-dev"
        }
    },
    "bin": [
        "bin/charcoal"
    ],
    "scripts": {
        "test": [
            "@tests"
        ],
        "tests": [
            "@phpcs",
            "@phpunit"
        ],
        "phplint": "find packages -type f -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
        "phpcs": "./tests/script/phpcs",
        "phpcbf": "php vendor/bin/phpcbf -ps --colors packages/*/src/ --ignore=tests/",
        "phpunit": "./tests/script/phpunit",
        "phpstan": "vendor/bin/phpstan analyse packages/*/src packages/*/tests"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
