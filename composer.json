{
	"name": "locomotivemtl/charcoal-queue",
	"description": "Queue, Queue items and Queueable objects for Charcoal",
	"keywords": [ "charcoal", "queue" ],
	"homepage": "https://charcoal.locomotive.ca",
	"license": "MIT",
	"support": {
		"issues": "https://github.com/locomotivemtl/charcoal-queue/issues",
		"source": "https://github.com/locomotivemtl/charcoal-queue"
	},
	"authors": [
		{
			"name": "Mathieu Ducharme",
			"email": "mat@locomotive.ca"
		},
		{
			"name": "Locomotive",
			"homepage": "https://locomotive.ca"
		}
	],
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.5.0",
		"locomotivemtl/charcoal-core": "@dev",
		"locomotivemtl/charcoal-factory":"~0.3"
	},
	"require-dev": {
		"phpunit/phpunit": "^5.1",
		"squizlabs/php_codesniffer": "^2.5",
		"satooshi/php-coveralls":"~1.0.1"
	},
	"autoload": {
		"psr-4": {
			"Charcoal\\": "src/Charcoal"
		}
	},
	"scripts": {
		"test": [
			"@phplint",
			"@phpcs",
			"@phpunit"
		],
		"phplint": "find {src,tests} -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
		"phpunit": "php vendor/bin/phpunit --configuration tests/phpunit.xml --coverage-text",
		"phpcs": "php vendor/bin/phpcs -ps --colors --standard=phpcs.xml src/",
		"phpcbf": "php vendor/bin/phpcbf -ps --colors --standard=phpcs.xml src/ tests/"
	}
}
